Clase abstracta MetodoAutenticacio:
public abstract class MetodoAutenticacion {

    protected int nivelSeguridad;

    public MetodoAutenticacion(int nivelSeguridad) {
        this.nivelSeguridad = nivelSeguridad;
    }

    public int getNivelSeguridad() {
        return nivelSeguridad;
    }

    public abstract void autenticar();

    public abstract String getTipo();
}

Subclase: HuellaDigital
public class HuellaDigital extends MetodoAutenticacion {

    public HuellaDigital(int nivelSeguridad) {
        super(nivelSeguridad);
    }

    @Override
    public void autenticar() {
        System.out.println("Autenticando por huella digital...");
    }

    @Override
    public String getTipo() {
        return "Huella Digital";
    }
}
Subclase: ReconocimientoFacial
public class ReconocimientoFacial extends MetodoAutenticacion {

    public ReconocimientoFacial(int nivelSeguridad) {
        super(nivelSeguridad);
    }

    @Override
    public void autenticar() {
        System.out.println("Autenticando mediante reconocimiento facial...");
    }

    @Override
    public String getTipo() {
        return "Reconocimiento Facial";
    }
}
Subclase: TokenSeguridad
public class TokenSeguridad extends MetodoAutenticacion {

    public TokenSeguridad(int nivelSeguridad) {
        super(nivelSeguridad);
    }

    @Override
    public void autenticar() {
        System.out.println("Autenticando con token de seguridad...");
    }

    @Override
    public String getTipo() {
        return "Token de Seguridad";
    }
}
Clase Empleado
import java.util.ArrayList;

public class Empleado {

    private String nombre;
    private ArrayList<MetodoAutenticacion> metodos;

    public Empleado(String nombre) {
        this.nombre = nombre;
        this.metodos = new ArrayList<>();
    }

    public void agregarMetodo(MetodoAutenticacion m) {
        metodos.add(m);
    }

    public void mostrarMetodos() {
        System.out.println("Métodos de autenticación de " + nombre + ":");
        for (MetodoAutenticacion m : metodos) {
            System.out.println(" - " + m.getTipo() + " (Seguridad: " + m.getNivelSeguridad() + ")");
        }
    }

    public boolean tieneMetodoSuperior(int umbral) {
        for (MetodoAutenticacion m : metodos) {
            if (m.getNivelSeguridad() > umbral) {
                return true;
            }
        }
        return false;
    }
}
main:
public class Main {
    public static void main(String[] args) {

        // Métodos que pueden existir sin empleados → AGREGACIÓN
        MetodoAutenticacion huella = new HuellaDigital(3);
        MetodoAutenticacion facial = new ReconocimientoFacial(5);
        MetodoAutenticacion token = new TokenSeguridad(4);

        // Crear empleados
        Empleado emp1 = new Empleado("Ana Pérez");
        Empleado emp2 = new Empleado("Carlos Ruiz");

        // Asignar métodos
        emp1.agregarMetodo(huella);
        emp1.agregarMetodo(token);

        emp2.agregarMetodo(facial);

        // Mostrar métodos
        emp1.mostrarMetodos();
        System.out.println();
        emp2.mostrarMetodos();

        System.out.println("\n--- Consulta de niveles ---");

        int umbral = 4;

        System.out.println("¿Ana tiene métodos con seguridad > " + umbral + "? " +
                emp1.tieneMetodoSuperior(umbral));

        System.out.println("¿Carlos tiene métodos con seguridad > " + umbral + "? " +
                emp2.tieneMetodoSuperior(umbral));
    }
}
